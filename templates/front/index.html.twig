{% extends 'base.html.twig' %}

{% block title %}
    Immob Agency
{% endblock %}
{% block body %}
    <div class="jumbotron text-center">
        <div class="container">
            <div class="row">
                <h1 class="border border-dark col-md-4 text-center mb-4"><a href="{{ path('property.index') }}">Immo Agence</a></h1>
            </div>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary" type="submit">Chercher</button>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container">
        <h2 class="text-center">DÃ©couvrir tous nos biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.getTitle }}</a>
                            </h5>
                            <p class="card-text">Surface : {{ property.Area }} Etage : ({{ property.Floor }})</p>
                            <div class="text-primary">Prix : {{ property.getNumberFormat(property. getPrice()) }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}