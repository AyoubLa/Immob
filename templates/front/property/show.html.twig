{% extends 'base.html.twig' %}

{% block title "Une autre page Symfony" %}

{% block body%}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <h1 class="border border-dark col-md-4 text-center"><a href="{{ path('property.index') }}">Immo Agence</a></h1>
            </div>
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} Pièces ; {{ property.area }} m²</h2>
                    <div class="text-primary">{{ property.price }} DHs</div>
                    <a href="#" class="btn btn-primary">Contactez-nous</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ property.area }} m²</td>
                    </tr>
                    <tr>
                        <td>Nombre de pièces</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Nombre de chambre</td>
                        <td>{{ property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Etage</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="text-center text-primary mt-2">
            <a href="{{ path('gallery.index') }}">Gallerie -></a>
        </div>
    </div>
{% endblock %}